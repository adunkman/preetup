body
   margin: 0 
   padding: 0
   
   color: #222

   font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
   line-height: 1.4em

.slides
   background-color: #222
   color: #fff

   h1
      position: absolute
      top: 0
      left: 0
      z-index: 1000
      width: 100%

      margin: 0
      padding: 20px 40px
      background-color: #E51937
      line-height: 1em
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5)

      p
         margin: 5px 0 0 0
         font-size: 0.7em
         line-height: 1em
         color: rgba(255, 255, 255, 0.8)

   ul
      margin: 0
      padding: 0
      list-style-type: none

   .rsvp
      position: absolute
      top: 0
      left: 0
      z-index: 1

      width: 100%
      height: 100%

      background-color: #222

      h2
         margin-top: 100px
         padding: 20px 40px

         font-size: 2em
         line-height: 2em

         img
            float: left
            width: 30%
            margin-right: 20px

      .question
         font-size: 1.5em
         color: rgba(255, 255, 255, 0.9)