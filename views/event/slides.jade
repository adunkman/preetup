- var bodyClass = "slides";
extends ../layout

block title
   | #{event.name} - preetup

block body
   body.slides
      h1= event.name
         p #{event.group.name} at #{event.venue.name}

      ul: each rsvp in rsvps
         li.rsvp
            h2
               .img: img(src=rsvp.member_photo.highres_link)
               | #{rsvp.member.name}

            if rsvp.answers
               dl: each answer, index in rsvp.answers
                  dt.question= event.survey_questions[index].question
                  dd.answer= answer || "(no response)"